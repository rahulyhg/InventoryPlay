<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ScrollView
        android:id="@+id/content"

        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_marginTop="?attr/actionBarSize"
        android:background="@android:color/transparent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="40dp">


            <android.support.v7.widget.CardView
                android:id="@+id/card_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                app:cardBackgroundColor="#55000000"
                app:cardCornerRadius="4dp">

                <RelativeLayout
                    android:id="@+id/frameContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">

                    <ImageView
                        android:id="@+id/end"
                        android:layout_width="60dp"
                        android:layout_height="85dp"
                        android:layout_alignParentStart="true"
                        android:layout_marginEnd="10dp"
                        android:background="#ffffff"
                        android:src="@drawable/ic_swipe_left"
                        android:visibility="visible"


                        />

                    <ImageView
                        android:id="@+id/start"
                        android:layout_width="60dp"
                        android:layout_height="85dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="10dp"
                        android:background="#ffffff"
                        android:src="@drawable/ic_swipe_right"

                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/end"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:text="Swipe left/right for more"

                        android:textColor="@color/white"
                        android:textStyle="bold" />

                </RelativeLayout>
            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                app:cardBackgroundColor="#55000000"
                app:cardCornerRadius="4dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">

                    <ImageView
                        android:id="@+id/swipeUp"
                        android:layout_width="60dp"
                        android:layout_height="85dp"
                        android:layout_alignParentStart="true"
                        android:layout_marginEnd="10dp"
                        android:background="@color/white"
                        android:scaleType="centerCrop"
                        android:src="@drawable/swipe_up"
                        android:visibility="visible"

                        />

                    <ImageView
                        android:id="@+id/swipeDown"
                        android:layout_width="60dp"
                        android:layout_height="85dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="10dp"
                        android:background="@color/white"
                        android:scaleType="centerCrop"
                        android:src="@drawable/swipe_down"
                        android:visibility="visible" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/swipeDown"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:text="Swipe up/down to scroll"

                        android:textColor="@color/white"
                        android:textStyle="bold" />

                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                app:cardBackgroundColor="#55000000"
                app:cardCornerRadius="4dp">

                <RelativeLayout
                    android:id="@+id/frameContainer1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">

                    <ImageView
                        android:id="@+id/pinch1"
                        android:layout_width="60dp"
                        android:layout_height="85dp"
                        android:layout_alignParentStart="true"
                        android:layout_marginEnd="10dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_pinch1"
                        android:visibility="visible"

                        />

                    <ImageView
                        android:id="@+id/pinch2"
                        android:layout_width="60dp"
                        android:layout_height="85dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="10dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_pinch2"
                        android:visibility="visible" />


                    <TextView
                        android:id="@+id/text1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/pinch1"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:text="Pinch to handle zoom in charts"

                        android:textColor="@color/white"
                        android:textStyle="bold" />

                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                app:cardBackgroundColor="#55000000"
                app:cardCornerRadius="4dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">

                    <android.support.design.widget.FloatingActionButton
                        android:id="@+id/fab1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_marginEnd="10dp"
                        android:backgroundTint="@color/colorPrimary"
                        android:src="@drawable/ic_toggle"
                        android:tint="@color/white"
                        app:borderWidth="0dp"
                        app:elevation="10dp" />

                    <android.support.design.widget.FloatingActionButton
                        android:id="@+id/fab2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="10dp"
                        android:backgroundTint="@color/colorPrimary"
                        android:src="@drawable/ic_toggle_chart"
                        android:tint="@color/white"
                        app:borderWidth="0dp"
                        app:elevation="10dp" />


                    <TextView
                        android:id="@+id/text3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/fab2"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:text="Tap to toggle between Chart view and Tabular view"

                        android:textColor="@color/white"
                        android:textStyle="bold" />

                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                app:cardBackgroundColor="#55000000"
                app:cardCornerRadius="4dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">

                    <android.support.design.widget.FloatingActionButton
                        android:id="@+id/fab3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_marginEnd="10dp"
                        android:backgroundTint="@color/red"
                        android:src="@drawable/ic_view_row"
                        android:tint="@color/white"
                        app:borderWidth="0dp"
                        android:elevation="10dp" />

                    <android.support.design.widget.FloatingActionButton
                        android:id="@+id/fab4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="10dp"
                        android:backgroundTint="@color/red"
                        android:src="@drawable/ic_view_column"
                        android:tint="@color/white"
                        app:borderWidth="0dp"
                        app:elevation="10dp" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/fab3"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:text="Tap to toggle between Row view and Column view"

                        android:textColor="@color/white"
                        android:textStyle="bold" />

                </RelativeLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>


    </ScrollView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="top"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="?attr/actionBarSize"
        android:background="@color/white"
        android:drawableStart="@drawable/ic_help"
        android:gravity="center_vertical"
        android:padding="2dp"
        android:text="Help"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/btn"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_gravity="top|end"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="?attr/actionBarSize"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingEnd="5dp"
        android:paddingStart="30dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_close"
        android:textStyle="bold"
        android:tint="#ff0000" />

</FrameLayout>